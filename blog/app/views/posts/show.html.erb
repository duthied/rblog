<div class="header">
  <h2><%= @post.title %></h2>
  <%= link_to "Home", controller: "welcome" %> | <%= link_to "Post Listing", posts_path %> | <%= link_to "Edit", edit_post_path(@post) %> | <%= link_to 'Delete', post_path(@post.id), method: :delete, data: { confirm: 'Are you sure?' } %>
</div>

<h3>Text:</h3> 
<div>
  <%= @post.text %>
</div>

<div class="comments">
  <h3>Comments:</h3>

  <% if @post.comments.length > 0 %>
    <% @post.comments.each do |comment| %>
      <span><%= comment.commenter %></span> said: <span><%= comment.body %></span>
    <% end %>
  <% else %>
    <span>None yet!</span>
  <% end %>

  

  <div>
    <h3>Add a Comment</h3>
    <%= form_for([@post, @post.comments.build]) do |f| %>
      <p>
        <%= f.label :commenter %><br />
        <%= f.text_field :commenter %>
      </p>
      <p>
        <%= f.label :body %><br />
        <%= f.text_area :body %></span>
      </p>
      <p>
        <%= f.submit %>
      </p>
    <% end %>
  </div>
</div>

