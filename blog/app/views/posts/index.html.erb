<div class="header">
  <h2>Post Listing</h2>
  
  <span class="page_actions">
    <%= link_to "Home", controller: "welcome" %> | <%= link_to "Create new post", new_post_path %>
  <span>

</div>

<% @posts.each do |post| %>
  <div class="post_listing_item">
    
    <div class="post_item_header">
      <span class="post_title"><%= link_to post.title.upcase, post_path(post.id) %></span>
    </div>

    <div class="post_body">
      <%= post.text %>
      
      <div class="comment_count">
        <%= post.comments.length %> comments
      </div>
    </div>

    <div class="post_item_footer">
      <%= link_to "Edit", edit_post_path(post) %> | <%= link_to 'Delete', post_path(post.id), method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  </div>
<% end %>