<div class="header">
  <h2>Post Listing</h2>
  <%= link_to "Home", controller: "welcome" %> | <%= link_to "Create new post", new_post_path %>
</div>

<% @posts.each do |post| %>
  <div class="post_listing_item">
    <span>
      <strong><%= post.title %></strong> - <%= post.text %>
    </span>
    <div>
      <%= link_to "Show", post_path(post.id) %> | <%= link_to "Edit", edit_post_path(post) %> | <%= link_to 'Delete', post_path(post.id), method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  </div>
<% end %>