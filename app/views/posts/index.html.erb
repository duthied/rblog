<div class="container">

  <div class="navbar">
    <div class="navbar-inner">
      <a class="brand" href="#">BLOG</a>
      <ul class="nav">
        <li class=""><%= link_to "Welcome", controller: "welcome" %></li>
        <li class="active"><%= link_to "Blog Home", posts_path %></li>
        <li class=""><%= link_to "Create New Post", new_post_path %></li>
        <li class=""><%= link_to "Login", new_user_session_path %></li>
      </ul>
    </div>
  </div>

  <div class="container">

    <div class="row">
      <div class="span2"></div>
      <div class="span10">
        <p class="lead"><strong><%= @posts.count %> posts found:</strong></p>
      </div>
    </div>

    <% @posts.each do |post| %>
      <div class="row blog-list-item">
        <div class="span2">
          <p class="text-right">
            <%= link_to "Edit", edit_post_path(post), class: "btn btn-mini" %>
            <%= link_to 'Delete', post_path(post.id), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-mini" %>
          </p>
        </div>

        <div class="span10">
          <p class="lead">
            <%= link_to post.title.upcase, post_path(post.id) %>
          </p>

          <%= post.text %>
          <div class="muted"><span class="badge"><%= post.comments.length %></span> comments</div>
        </div>

      </div>
    <% end %>

  </div>

</div>