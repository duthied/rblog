<div class="container">
  
  <%= render "nav", active: "roles" %>
  
  <div class="container">

    <% @roles.each do |role| %>
      <div class="row">
        <div class="span2">
          <p class="text-right">
            <% if can? :update, role %>
              <%= link_to 'Edit', edit_role_path(role), class: "btn btn-mini" %>
            <% end %>
            <% if can? :destroy, role %>
              <%= link_to 'Destroy', role, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-mini btn-danger" %>
            <% end %>
          </p>
        </div>

        <div class="span10">
          <p class="lead"><%= link_to role.description.upcase, role %></p>
        </div>
      </div>

    <% end %>

    <div class="row">
      <div class="span2"></div>
      
      <div class="span8">
        <% if can? :create, Role %>
          <%= link_to 'New Role', new_role_path, class: "btn btn-small btn-primary" %>
        <% end %>
      </div>

      <div class="span2"></div>
    </div>

  </div>

</div>