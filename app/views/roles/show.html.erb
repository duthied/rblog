<script>
  $(document).ready(function(){
    defaultLocation();
  });

  function defaultLocation() {
    fillAjaxHolder('/role_permissions?role_id=<%= @role.id %>');
  }
</script>

<div class="container">
  
  <%= render "nav", active: "roles" %>

  <div class="container">
    <div class="row">
      <div class="span2"></div>
      <div class="span8">
        <ul class="breadcrumb"><li class=""><%= link_to "< back to post listing", roles_path %></li></ul>
      </div>
      <div class="span2"></div>
    </div>

    <div class="row">
      <div class="span2">
        <p class="text-right"><%= link_to 'Edit', edit_role_path(@role), class: "btn btn-small" %></p>
      </div>
      <div class="span8">
        <p class="lead">
          Description: <%= @role.description %>
        </p>

        <div class="row">
          <div class="span4">
            <div class="well">
              <strong>Parents</strong>
              <div class="controls">
                <%=  build_role_list('parents_listing') %>
              </div>
            </div>
          </div>

          <div class="span4">
            <div class="well">
              <strong>Children</strong>
              <div class="controls">
                <%=  build_role_list('children_listing') %>
              </div>
            </div>
          </div>
        </div>

      </div>

      <div class="span2"></div>
    </div>

    <div class="row">
      <div class="span2"></div>
      <div class="span8">
        <h4>Permissions</h4>
        <div id="ajaxHolder"></div>
      </div>
      <div class="span2"></div>
    </div>
  </div>

</div>